<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFFFFF"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:text="Hi Shamal"
        android:textColor="#ff3d00"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="36dp" />

    <Button
        android:id="@+id/orderButton"
        android:layout_width="118dp"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="-1dp"
        android:backgroundTint="#FF3D00"
        android:text="Order "
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="132dp"
        android:layout_height="140dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.806"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user" />

    <androidx.cardview.widget.CardView

        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="8dp"
        android:elevation="100dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="500dp"
            android:layout_height="280dp"
            app:srcCompat="@drawable/home4" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="THE BLOOM ROOM"
            android:layout_marginLeft="110dp"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"></TextView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:textColor="#AD1457"
            android:text="a bouquet of love "
            android:layout_marginLeft="120dp"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"></TextView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="130dp"
            android:text="Welcome to our The Bloom Room, where blooms come alive! From elegant bouquets to heartfelt arrangements, we offer nature's best gifts.! "
            android:textColor="#000000"
            android:textSize="13dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            tools:ignore="TextSizeCheck"></TextView>

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="200dp"
            android:text="Get a discount on"
            android:textColor="#EF6C00"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"></TextView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="215dp"
            android:textColor="#EF6C00"
            android:text="your firt purchase! "
            android:layout_marginLeft="120dp"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"></TextView>






    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Categories"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"></TextView>

    <HorizontalScrollView
        android:layout_width="447dp"
        android:layout_height="308dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView


                android:id="@+id/cardView2"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_marginLeft="2450dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:elevation="100dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView">


                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="389dp"
                    android:layout_height="380dp"
                    android:layout_marginTop="-90dp"
                    app:srcCompat="@drawable/birthday2" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView


                android:id="@+id/birthday"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"

                android:layout_marginRight="20dp"
                android:elevation="100dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView">


                <ImageView
                    android:id="@+id/Anniversary"
                    android:layout_width="389dp"
                    android:layout_height="380dp"
                    android:layout_marginTop="-90dp"
                    app:srcCompat="@drawable/ani" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView


                android:id="@+id/housewarming"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:elevation="100dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView">


                <ImageView
                    android:id="@+id/Newbaby"
                    android:layout_width="389dp"
                    android:layout_height="380dp"
                    android:layout_marginTop="-90dp"
                    app:srcCompat="@drawable/h1" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView


                android:id="@+id/ValentinesDay"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:elevation="100dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView">


                <ImageView
                    android:id="@+id/Graduation"
                    android:layout_width="389dp"
                    android:layout_height="380dp"
                    android:layout_marginTop="-90dp"
                    app:srcCompat="@drawable/baby" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView


                android:id="@+id/mothersday"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:elevation="100dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView">


                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="389dp"
                    android:layout_height="380dp"
                    android:layout_marginTop="-90dp"
                    app:srcCompat="@drawable/v1" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView


                android:id="@+id/Sympathy"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:elevation="100dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView">


                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="389dp"
                    android:layout_height="380dp"
                    android:layout_marginTop="-90dp"
                    app:srcCompat="@drawable/gradu"
                    tools:ignore="DuplicateIds" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView


                android:id="@+id/Funeral"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:elevation="100dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                tools:ignore="DuplicateIds">


                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="389dp"
                    android:layout_height="380dp"
                    android:layout_marginTop="-90dp"
                    app:srcCompat="@drawable/mother" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView


                android:id="@+id/cardView3"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:elevation="100dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView">


                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="389dp"
                    android:layout_height="380dp"
                    android:layout_marginTop="-90dp"
                    app:srcCompat="@drawable/symp"
                    tools:ignore="DuplicateIds" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView


                android:id="@+id/Funeral"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:elevation="100dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                tools:ignore="DuplicateIds">


                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="389dp"
                    android:layout_height="380dp"
                    android:layout_marginTop="-90dp"
                    app:srcCompat="@drawable/fune"
                    tools:ignore="DuplicateIds" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>